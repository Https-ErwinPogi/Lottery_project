<main>
  <%= render 'clients/shared/banner_image' %>
  <section style="padding-top: 10px; height: 100vh">
    <div class="container overflow-hidden">
      <%= button_to 'Button', '', class: "btn btn-primary w-100 mb-3" %>
      <h4>Winners Feedback</h4>
      <% @winners.each do |winner| %>
        <div class="card mt-1 text-black mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-4">
                <%= image_tag winner.image.url, style: 'height:100%; width: 100%' if winner.image? %>
              </div>
              <div class="col-sm-8">
                <div class="d-flex align-content-center flex-wrap">
                  <h5><%= winner.user.username %></h5></div>
                <div class="d-flex align-content-center flex-wrap">
                  <h4><%= winner.comment %></h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</main>
