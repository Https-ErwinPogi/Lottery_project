  <main>
    <section class="text-center container">
      <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
          <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active" data-bs-interval="10000" style="object-fit: cover">
                <%= image_tag ("img1.jpeg"), class: "d-block w-100" %>
              </div>
              <div class="carousel-item" data-bs-interval="2000">
                <%= image_tag ("img2.jpeg"), class: "d-block w-100" %>
              </div>
              <div class="carousel-item">
                <%= image_tag ("img3.jpeg"), class: "d-block w-100" %>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

        </div>
      </div>

    </section>
  </main>


  <div class="bg-dark" style="margin-bottom: 0">
    <p class="container text-white" style="margin-bottom: 0">Announcement: </p>
  </div>

  <div class="py-3">
    <div class="container">
      <%= button_to 'Button', '', class: "btn btn-primary w-100 mb-3" %>

      <div class="mb-2">
        <%= link_to 'All', clients_lotteries_path, class: "btn btn-dark rounded-circle" %>
        <% @categories.each do |category| %>
          <%= link_to category.name, clients_lotteries_path(category_name: category.name), class: "btn btn-dark" if params[:category] == category.name %>
          <%= link_to category.name, clients_lotteries_path(category_name: category.name), class: "btn btn-dark" unless params[:category] == category.name %>
        <% end %>
      </div>
      <div class="row text-center">
        <% @items.each do |item| %>
          <div class="col-6 mb-3">
            <div class="card shadow-sm">
              <div class="card-body d-flex flex-column">
                <%= image_tag item.image.url, class: "rounded d-block h-100 w-100" if item.image? %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div>
        <%= link_to 'More', '#', class:"float-end" %>
      </div>
    </div>
  </div>
<%= render 'layouts/clients_form/client_footer_form' %>
