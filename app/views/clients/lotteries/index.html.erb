<main>
  <%= render 'clients/shared/banner_image' %>
  <div class="py-3">
    <div class="container">
      <%= button_to 'Button', '', class: "btn btn-primary w-100 mb-3" %>
      <div class="mb-2">
        <%= link_to 'All', clients_lotteries_path, class: "btn btn-dark rounded-circle" %>
        <% @categories.each do |category| %>
          <%= link_to category.name, clients_lotteries_path(category_name: category.name), class: "btn btn-warning" if params[:category_name] == category.name %>
          <%= link_to category.name, clients_lotteries_path(category_name: category.name), class: "btn btn-dark" unless params[:category_name] == category.name %>
        <% end %>
      </div>
      <div class="row text-center">
        <% @items.each do |item| %>
          <div class="col-lg-6 mb-3">
            <div class="card shadow-sm">
              <div class="card-body d-flex flex-column">
                <%= link_to (image_tag item.image.url, height: "500", width: "100", style: "width: 100%" if item.image?), clients_lottery_path(item) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div>
        <%= link_to 'More', '#', class: "float-end" %>
      </div>
    </div>
  </div>
</main>