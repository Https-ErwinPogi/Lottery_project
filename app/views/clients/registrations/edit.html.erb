<div class="container col-12">
  <div class="container card mt-5 mb-5 bg-dark ">
    <div class="card-body">
      <h2 class="text-center">Edit Profile</h2>
      <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }, data: { turbo: false }) do |f| %>
        <div class="row">
          <div class="col-lg-6 col-xs-12 mb-2">
            <div class="card  text-black">
              <div class="card-header">
                <h3>Edit User Profile</h3>
              </div>
              <div class="card-body">
                <div class="field mb-3">
                  <%= f.label 'Upload/Change Profile' %>
                  <%= f.file_field :image, class: "form-control" %>
                </div>

                <div class="field mb-3">
                  <% invalid = resource.errors.include?(:username) %>
                  <%= f.label :username %>
                  <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control #{'is-invalid' if invalid}", placeholder: "Enter email" %>
                  <% if invalid %>
                    <div class="invalid-feedback d-block">
                      <% resource.errors.full_messages_for(:username).each do |error_message| %>
                        <%= error_message %>.
                      <% end %>
                    </div>
                  <% end %>
                </div>


                <div class="field mb-3">
                  <% invalid = resource.errors.include?(:phone) %>
                  <%= f.label :phone %><br/>
                  <%= f.text_field :phone, autofocus: true, autocomplete: "phone", maxlength: 13, class: "form-control #{'is-invalid' if invalid}", placeholder: "+639*********" %>
                  <% if invalid %>
                    <div class="invalid-feedback d-block">
                      <% resource.errors.full_messages_for(:phone).each do |error_message| %>
                        <%= error_message %>.
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-6 col-xs-12">
            <div class="card text-black">
              <div class="card-header">
                <h3>Change Password</h3>
              </div>
              <div class="card-body">

                <div class="field mb-3">
                  <% invalid = resource.errors.include?(:current_password) %>
                  <%= f.label :current_password %>
                  <small>(we need your current password to confirm your changes)</small><br/>
                  <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control #{'is-invalid' if invalid}", placeholder: "Enter Current Password" %>
                  <% if invalid %>
                    <div class="invalid-feedback d-block">
                      <% resource.errors.full_messages_for(:current_password).each do |error_message| %>
                        <%= error_message %>.
                      <% end %>
                    </div>
                  <% end %>
                </div>

                <div class="field">
                  <% invalid = resource.errors.include?(:password) %>
                  <%= f.label 'New Password' %> <small>(leave blank if you don't want to change it)</small><br/>
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control #{'is-invalid' if invalid}", placeholder: "Enter New Password" %>
                  <% if @minimum_password_length %>
                    <small><%= @minimum_password_length %> characters minimum</small>
                  <% end %>
                  <% if invalid %>
                    <div class="invalid-feedback d-block">
                      <% resource.errors.full_messages_for(:password).each do |error_message| %>
                        <%= error_message %>.
                      <% end %>
                    </div>
                  <% end %>
                </div>

                <div class="field mb-3 mt-3">
                  <% invalid = resource.errors.include?(:password_confirmation) %>
                  <%= f.label :password_confirmation %><br/>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control #{'is-invalid' if invalid}", placeholder: "Confirm Password" %>
                  <% if invalid %>
                    <div class="invalid-feedback d-block">
                      <% resource.errors.full_messages_for(:password_confirmation).each do |error_message| %>
                        <%= error_message %>.
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="actions text-center mt-5">
          <%= f.submit "Update", class: "btn btn-light w-25" %>
          <%= link_to "Cancel", clients_profiles_path, class: 'btn btn-outline-light w-25' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>