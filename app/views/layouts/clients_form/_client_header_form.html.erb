<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
  <div class="container">
    <%= link_to 'Brand Image', clients_root_path, class: "navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" %>
    <ul class="nav nav-pills mt-2 ">
      <% if user_signed_in? %>
        <li class="nav-fill">
          <a href="#" class="nav-link text-white bi bi-coin" data-bs-toggle="dropdown"><%= current_user.coins %></a>
        </li>
        <li class="nav-fill">
          <a href="#" class="nav-link text-white" data-bs-toggle="dropdown"><%= t("claim") %></a>
        </li>
      <% end %>
      <li class="nav-fill dropdown">
        <a href="#" class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown"><%= t("language") %></a>
        <div class="dropdown-menu">
          <%= link_to "English", params.permit!.merge(locale: 'en'), class: "dropdown-item" %>
          <%= link_to "Tagalog", params.permit!.merge(locale: 'tl'), class: "dropdown-item" %>
          <a href="#" class="dropdown-item">Chinese</a>
        </div>
      </li>
      <li class="nav-item dropdown ms-auto">
        <a href="#" class="nav-link bi bi-list fs-5 dropdown-toggle text-white" data-bs-toggle="dropdown"></a>
        <div class="dropdown-menu dropdown-menu-end">
          <% if user_signed_in? %>
        <%= link_to 'Profile', clients_profiles_path, class: "dropdown-item" %>
          <a href="#" class="dropdown-item">Settings</a>
          <div class="dropdown-divider"></div>
            <%= button_to "Log Out", destroy_user_session_path, { onclick: "return confirm('Are you sure you want to delete?')", method: :delete, class: "dropdown-item" } %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</header>