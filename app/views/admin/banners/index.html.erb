<h1>Banner List</h1>
<div class="card p-3 ">
  <div class="card-body table-responsive">
    <table class="table table-hover text-center align-middle">
      <thead class="table-light">
      <th>Id</th>
      <th>Preview</th>
      <th>Online at</th>
      <th>Offline at</th>
      <th>Status</th>
      <th colspan="2">Action</th>
      </thead>
      <tbody>
      <% @banners.each do |banner| %>
        <tr>
          <td><%= banner.id %></td>
          <td><%= image_tag banner.preview.url, class: "rounded" if banner.preview? %></td>
          <td><%= banner.status %></td>
          <td><%= banner.online_at %></td>
          <td><%= banner.offline_at %></td>
          <td  class="p-1"><%= link_to 'Edit', edit_admin_banner_path(banner), class: "btn btn-outline-success" %></td>
          <td class="p-1"><%= button_to 'Delete', admin_banner_path(banner), onclick: "return confirm('Are you sure you want to end?')", method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
        </tbody>
      <% end %>
      </table>
    <div class="">
      <%= link_to 'New', new_admin_banner_path, class: "btn btn-dark px-4" %>
    </div>
  </div>
</div>
