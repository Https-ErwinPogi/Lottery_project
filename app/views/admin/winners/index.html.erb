<div class="col py-3 container">
  <h1>Winner Lists</h1>
  <div class="card text-center table-responsive">
    <div class="card-body">
      <%= form_tag({ url: admin_winners_path }, { method: :get }) do %>
        <ul class="nav nav-pills nav-justified mt-3 mb-3 text-start">
          <li class="nav-item text-start mx-2">
            <div class="mb-3">
              <%= label_tag 'Serial Number' %>
              <%= text_field_tag :serial_number, '', placeholder: "Serial Number", class: "form-control" %>
            </div>

            <div>
              <%= label_tag :state %>
              <%= select_tag :state, options_for_select(Winner.aasm.states.map(&:name)), { prompt: 'Choose State', class: "form-control form-select" } %>
            </div>
          <li class="nav-item text-start mx-2">
            <div class="mb-3">
              <%= label_tag 'Item Name' %>
              <%= text_field_tag :item_name, '', placeholder: "Item Name", class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= label_tag 'Email' %>
              <%= text_field_tag :user_email, '', placeholder: "Email", class: "form-control" %>
            </div>
          </li>
          <li class="nav-item text-start mx-2">
            <div class="mb-3">
              <%= label_tag 'Start at' %>
              <%= datetime_field_tag :start, '', class: "form-control", value: params[:start] %>
            </div>
            <div class="mb-3">
              <%= label_tag 'End at' %>
              <%= datetime_field_tag :end, '', class: "form-control", value: params[:end] %>
            </div>
            <div class="float-end">
              <%= submit_tag :Search, class: "btn btn-primary " %>
              <%= link_to 'Reset', admin_winners_path, class: "btn btn-secondary" %>
            </div>
          </li>
      <% end %>
      </li>
      </ul>
      
      <table class="table table-light">
        <thead>
        <th>Serial Number</th>
        <th>Item Name</th>
        <th>Email</th>
        <th>State</th>
        <th>Created at</th>
        <th colspan="6">Action</th>
        </thead>
        <tbody>
        <% @winners.each do |winner| %>
          <tr>
            <td><%= winner.bet.serial_number %></td>
            <td><%= winner.item.name %></td>
            <td><%= winner.user.email %></td>
            <td><%= winner.state %></td>
            <td><%= winner.created_at %></td>
            <td><%= button_to "Submit", admin_winner_submit_path(winner.id), method: :put if winner.may_submit? %></td>
            <td><%= button_to "Pay", admin_winner_pay_path(winner.id), method: :put if winner.may_pay? %></td>
            <td><%= button_to "Ship", admin_winner_ship_path(winner.id), method: :put if winner.may_ship? %></td>
            <td><%= button_to "Deliver", admin_winner_deliver_path(winner.id), method: :put if winner.may_deliver? %></td>
            <td><%= button_to "Publish", admin_winner_publish_path(winner.id), method: :put if winner.may_publish? %></td>
            <td><%= button_to "Remove Publish", admin_winner_remove_publish_path(winner.id), method: :put if winner.may_remove_publish? %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <% if @winners.blank? %>
        <h4 class="text-center text-danger">Does not match any results!</h4>
      <% end %>
    </div>
  </div>
</div>