<%= form_with model: news_ticker, url: path, data: { turbo: false } do |form| %>
  <div class="container mt-5">
    <div class="card">
      <div class="card-body">
        <%= form.label :content %>
        <%= form.text_field :content, class: "form-control", placeholder: "Enter Content" %>
        <p class="mt-3">Set status:</p>
        <% Item.statuses.keys.each do |status| %>
        <span style="margin-right: 10px">
          <%= form.radio_button :status, status %>
          <%= form.label status.to_sym %>
        </span>
        <% end %>
        <div class="text-end mt-3">
          <%= form.submit class: "btn btn-success " %>
          <%= link_to 'Cancel', admin_news_tickers_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>