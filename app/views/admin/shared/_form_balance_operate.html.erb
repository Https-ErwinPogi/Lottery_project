<div class="container">
  <h1>Balance Operates</h1>
  <div class="">
    <div class="row">
      <div class="col">
        <div class="card">
          <ul class="nav nav-tabs p-2 pb-0 card-header">
            <li class="nav-item">
              <%= link_to 'Increase', new_admin_user_increase_path, class: "nav-link #{'active' if genre == :increase}" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Deduct', new_admin_user_deduct_path, class: "nav-link #{'active' if genre == :deduct}" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Bonus', new_admin_user_bonuse_path, class: "nav-link #{'active' if genre == :bonus}" %>
            </li>
          </ul>
          <div class="card-body p-4">
            <%= form_with model: order, url: path, data: { turbo: false } do |form| %>
              <div class="">
                <label class="visually-hidden" for="specificSizeInputGroupUsername"></label>
                <div class="input-group">
                  <div class="input-group-text">Coins</div>
                  <%= form.number_field :coin, class: "form-control", placeholder: "Coins" %>

                </div>
                <div class="mt-3 pb-5">
                  <label class="visually-hidden" for="specificSizeInputGroupUsername">Username</label>
                  <div class="input-group">
                    <div class="input-group-text">Remarks</div>
                    <%= form.text_field :remarks, class: "form-control", placeholder: "Remarks" %>
                  </div>
                </div>
              </div>
              <%= form.submit class: "btn btn-dark" %>
              <%= link_to 'back', admin_users_path, class: "btn btn-outline-dark" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mt-5">
          <div class="card-body p-4">
            <div class="">
              <label class="visually-hidden" for="specificSizeInputGroupUsername">Username</label>
              <div class="input-group">
                <div class="input-group-text">Username</div>
                <input type="text" class="form-control" id="specificSizeInputGroupUsername" value="<%= @user&.username %>" readonly=true>
              </div>
            </div>
            <div class="mt-3">
              <label class="visually-hidden" for="specificSizeInputGroupUsername">Promoter Name</label>
              <div class="input-group">
                <div class="input-group-text">Promoter Name</div>
                <input type="text" class="form-control" id="specificSizeInputGroupUsername" value="<%= @user&.parent&.username %>" readonly=true>
              </div>
            </div>
            <div class="mt-3 pb-4" style="margin-bottom: 9px">
              <label class="visually-hidden" for="specificSizeInputGroupUsername">Coins</label>
              <div class="input-group">
                <div class="input-group-text">Coins</div>
                <input type="text" class="form-control" id="specificSizeInputGroupUsername" value="<%= @user&.coins %>" readonly=true>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>