<div class="card shadow-sm mb-10 bg-white rounded">
  <h1 class="card-header text-center">Category List</h1>
  <div class="card-body table-responsive">
    <table class="table table-bordered text-center table-striped table-hover">
      <thead class="table-group-divider">
      <th>Sort</th>
      <th>Category Name</th>
      <th colspan="2">Action</th>
      </thead>
      <tbody class="table-group-divider ">
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.sort %></td>
          <td><%= category.name %></td>
          <td class="m-0"><%= link_to 'Edit', edit_admin_category_path(category), class: "p-0 m-0" %></td>
          <td class="m-0"><%= button_to 'Delete', admin_category_path(category), method: :delete, style: "display:inline" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to 'New', new_admin_category_path, class: "btn btn-secondary px-4" %>
  </div>
</div>
<%= link_to 'back', admin_items_path %>