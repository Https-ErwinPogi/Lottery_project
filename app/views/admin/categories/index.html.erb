  <div class="card shadow-sm mb-10 bg-white rounded">
    <h1 class="card-header text-center">Category List</h1>
    <div class="card-body">
      <% @categories.each do |category| %>
      <div>
        <ul>
          <li><%= category.name %>
              <%= link_to 'Edit', edit_admin_category_path(category) %>
            <%= button_to 'Delete', admin_category_path(category), method: :delete, style: "display:inline" %>
          </li>
        </ul>
      </div>
      <% end %>
      <%= link_to 'New', new_admin_category_path, class: "btn btn-secondary px-4" %>
    </div>
  </div>
  <%= link_to 'back', admin_items_path %>