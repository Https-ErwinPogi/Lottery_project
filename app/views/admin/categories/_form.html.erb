<div class="card-body">
  <%= form_with model: category, url: path, data: { turbo: false } do |form| %>
    <% invalid = @category.errors.include?(:name) %>
    <%= form.label :category %>
    <%= form.text_field :name, class: "form-control #{'is-invalid' if invalid}" %>
    <% if invalid %>
      <div class="invalid-feedback d-block">
        <% @category.errors.full_messages_for(:name).each do |error_message| %>
         Category <%= error_message %>.
        <% end %>
      </div>
    <% end %>
    <% invalid = @category.errors.include?(:sort) %>
    <%= form.label :sort %>
    <%= form.number_field :sort, class: "form-control #{'is-invalid' if invalid}" %>
    <% if invalid %>
      <div class="invalid-feedback d-block">
        <% @category.errors.full_messages_for(:sort).each do |error_message| %>
          <%= error_message %>.
        <% end %>
      </div>
    <% end %>
    <div class="text-center mt-3">
      <%= form.submit class: "btn btn-success" %>
    </div>
  <% end %>
  <%= link_to 'Back', new_admin_item_path %>
</div>